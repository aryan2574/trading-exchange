{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "strict": true,
        "esModuleInterop": true,
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}